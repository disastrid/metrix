# Copy this file to .env and fill in your actual values

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/studyapp

# JWT Secret (generate a secure random string)
JWT_SECRET=your-jwt-secret-key-here

# Admin password for legacy mode (optional)
# Only needed if you want password-only login without user accounts
ADMIN_PASSWORD=your-password-here

# Environment
NODE_ENV=development

# FOR RENDER DEPLOYMENT:
# Set these in Render dashboard environment variables:
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/studyapp?retryWrites=true&w=majority
# JWT_SECRET=your-secure-jwt-secret
# ADMIN_PASSWORD=your-secure-password (optional)
# NODE_ENV=production