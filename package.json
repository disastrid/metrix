{
  "name": "testInsert-modern",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "build": "npm run build:css && npm run build:frontend",
    "build:css": "sass public/css/design-system.scss public/css/design-system.css --style=expanded --source-map",
    "build:css:watch": "sass public/css/design-system.scss public/css/design-system.css --style=expanded --source-map --watch",
    "build:frontend": "cd frontend && npm run build && cp -r dist/* ../public/"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.4",
    "morgan": "^1.10.0",
    "random-words": "^2.0.1",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "sass": "^1.90.0"
  }
}
